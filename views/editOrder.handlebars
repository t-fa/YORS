<title>Ye Olde Robot Shoppe Orders</title>


<h1>Edit An Order</h1>
<br>

<!-- This form will submit to the GET route update, and will display the current values,
    allowing the user to pick what entries they'd like to update -->
<form>
    <fieldset>
        <div class="form-group">
            <label>Edit customerID:
                <input class="form-control" type="number" name="customerID" size="40" min="1" max="4">
            </label>
            <label>Edit orderDate:
                <input class="form-control" type="date" name="orderDate" size="40" min="2020-01-01" max="2020-12-31">
            </label>
            <label>Edit galacticPay:
                <input class="form-control" type="text" inputmode="numeric" patter="[0-9]*" name="galaticPay" size="40"
                    maxlength="20" minlength="20">
            </label>
            Please click on the correct value for orderBeamed:
            <div class="row">
                <input id="orderBeamed_true" type="radio" name="orderBeamed_true" value="1" />Yes
                <input id="orderBeamed_false" type="radio" name="orderedBeamed_false" value="0" />No
            </div>
            <input type="submit" class="btn btn-primary" value="Update Order">
            <input type="button" class="btn btn-danger" value="Cancel" onClick="location.href='orders'"></button>
        </div>
    </fieldset>
</form>

