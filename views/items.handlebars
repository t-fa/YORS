<title>Ye Olde Robot Shoppe Items</title>

<!-- SQL INSERT query for the Items Entity-->
<h1>Add an item:</h1>
<section>
    <form method="post">
        <div class="form-group">
            <label>Enter item description:
                <input class="form-control" type="text" name="item" required>
            </label>
            <label>Select supplier: (optional)
                <select class="custom-select" name="s_id">
                    <option value="NULL" SELECTED>NULL</option>
                    {{#each suppliers}}
                        {{#if this.supplierID}}
                            <option value = "{{this.supplierID}}">
                                {{ this.supplierID }}, {{ this.supplierName }}
                            </option>
                        {{/if}} 
                    {{/each}}
                </select>
            </label>
            <label>Enter Ye Olde Price:
                <input class="form-control" type="number" step="0.01" min=0 size="40" name="price" required>
            </label>
            <label>Enter number in stock:
                <input class="form-control" type="number" name="quantity" size="40" min="0" required>
            </label>
            <input type="submit" class="btn btn-primary" value="Add Item" name="addItem">
        </div>
    </form>
</section>

<br>

<!-- SQL SELECT query for the Items Entity to be displayed in a table 
    with some supplier information -->
<h1>Current Items:</h1>
<section>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Item ID</th>
                <th>Item</th>
                <th>Supplier ID</th>
                <th>Supplier Name</th>
                <th>Ye Olde Price</th>
                <th>Number In Stock</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr>
                <td>{{ this.itemID }}</td>
                <td>{{ this.itemType }}</td>
                <td>
                    {{#if this.supplierID}}
                        {{ this.supplierID }}
                    {{else}}NULL
                    {{/if}}</td>
                <td>
                    {{#if this.supplierName}}
                        {{ this.supplierName }}
                    {{else}}NULL
                    {{/if}}</td>
                <td>{{ this.YeOldePrice }}</td>
                <td>{{ this.currentQuantity }}</td>
                <td><input type="button" class="btn btn-info" value="Edit" onClick="location.href='editItem'"></td>
                <td><button class="btn btn-info">Delete</button></td>
            </tr>
            {{/each}}
                           
        </tbody>
    </table>
</section>