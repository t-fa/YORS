<title>Ye Olde Robot Shoppe Items</title>

<!-- SQL SELECT query for the Items Entity-->
<h1>Current Items:</h1>
<section>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Item ID</th>
                <th>Item Type</th>
                <th>Supplier ID</th>
                <th>Ye Olde Price</th>
                <th>Number In Stock</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{ this.itemID }}</td>
                <td>{{ this.itemType }}</td>
                <td>{{ this.supplierID }}</td>
                <td>{{ this.YeOldePrice }}</td>
                <td>{{ this.currentQuantity }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
<br>

<h1>Add an item:</h1>
<section>
    <form method="post">
        <div class="form-group">
            <label>Enter itemType:
                <input class="form-control" type="text" name="item">
            </label>
            <label>Enter supplierID: (optional)
                <select class="custom-select" name="s_id">
                    <option value="NULL" SELECTED>NULL</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </label>
            <label>Enter Ye Olde Price:
                <input class="form-control" type="number" step="0.01" min=0 size="40" name="price">
            </label>
            <label>Enter currentQuantity:
                <input class="form-control" type="number" name="quantity" size="40" min="0">
            </label>
            <input type="submit" class="btn btn-primary" value="Add Item" name="addItem">
        </div>
    </form>
</section>