<!-- Title -->
<title>Ye Olde Robot Shoppe Customers</title>

<!-- SQL INSERT query for the Customers Entity-->
<h1>Add a new customer:</h1>
<section>
    <form method="post">
        <div class="form-group row">
            <div class="col">
                <label class="col">Enter First Name:
                    <input type="text" class="form-control" name="customerFirstName" required />
                </label>
            </div>
            <div class="col">
                <label class="col">Enter Last Name:
                    <input type="text" class="form-control" name="customerLastName" required />
                </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label class="col">Enter Planet:
                    <input type="text" class="form-control" name="customerPlanet" required />
                </label>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Add Customer" name="addCustomer" />
    </form>
</section>

<br />

<!-- SQL SELECT query for the Customers Entity displayed in a table -->
<h1>Current Customers:</h1>

<form>
    <div class="form-group row">
        <div class="col">
            <label class="col">View Selected Customers
                <input type="text" class="form-control" placeholder="Search for names..">
            </label>
        </div>
        <div class="col">
            <label class="col">Or Filter By Planet
                <select class="col form-control">
                    {{#each planets}}
                    <option>{{ this.customerPlanet }}</option>
                    {{/each}}
                </select>
            </label>
        </div>
    </div>
</form>
<section>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Customer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Planet</th>
            </tr>
        </thead>
        <tbody>
            {{#each customers}}
            <tr>
                <td>{{ this.customerID }}</td>
                <td>{{ this.customerFirstName }}</td>
                <td>{{ this.customerLastName }}</td>
                <td>{{ this.customerPlanet }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>