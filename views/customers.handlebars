<!-- Title -->
<title>Ye Olde Robot Shoppe Customers</title>

<!-- SQL SELECT query for the Customers Entity-->
<h1>Current Customers:</h1>

<form>
    <div class="form-group row">
        <div class="col">
            <label>View Selected Customers
                <input type="text" class="form-control" placeholder="Search for names..">
            </label>
            <label>Or Filter By Planet
                <select class="custom-select">
                    <option>Earth</option>
                    <option>Jupiter</option>
                    <option>Ergotron V</option>
                    <option>Machina</option>
                </select>
            </label>
        </div>
    </div>
</form>
<section>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Customer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Planet</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{ this.customerID }}</td>
                <td>{{ this.customerFirstName }}</td>
                <td>{{ this.customerLastName }}</td>
                <td>{{ this.customerPlanet }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>

<br />
<h1>Add a new customer:</h1>
<section>
    <form method="post">
        <div class="form-group">
            <label>Enter First Name:
                <input type="text" class="form-control" name="customerFirstName" size="40" maxlength="255" />
            </label>
            <label>Enter Last Name:
                <input type="text" class="form-control" name="customerLastName" size="40" maxlength="255" />
            </label>
            <label>Enter Planet:
                <input type="text" class="form-control" name="customerPlanet" size="40" maxlength="255" />
            </label>
            <input type="submit" class="btn btn-primary" value="Add Customer" name="addCustomer" />
    </form>
</section>