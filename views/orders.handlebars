<title>Ye Olde Robot Shoppe Orders</title>

<!-- SQL SELECT query for the Orders Entity & Mock Edit/Delete CRUD functionality-->
<h1>Current Orders:</h1>
<section>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Date of Order</th>
                <th>galacticPay</th>
                <th>Order Beamed?</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{ this.orderID }}</td>
                <td>{{ this.customerID }}</td>
                <td>{{ this.orderDate }}</td>
                <td>{{ this.galacticPay }}</td>
                <td>{{ this.orderBeamed }}</td>
                <td><input type="button" class="btn btn-info" value="Edit" onClick="location.href='editOrder'"></td>
                <td> <button class="btn btn-info">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>

<br>

<h1>Add an order:</h1>
<section>
    <form method="post">
        <div class="form-group">
            <label>Enter customerID:
                <select class="custom-select" name="customerID">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </label>
            <label>Please select the correct value for orderBeamed:
                <select class="custom-select" name="orderBeamed">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </label>
        </div>
        
        <div class="form-group">
            <label>Enter orderDate:
                <input type="date" class="form-control" type="date" name="orderDate" size="60" min="2020-01-01"
                    max="2020-12-31">
            </label>
            <label>Enter galacticPay:
                <input class="form-control" type="text" inputmode="numeric" pattern="[0-9]*" name="galaticPay"
                    maxlength="20" minlength="20" placeholder="12345678951321564879">
            </label>
        </div>
        <input type="submit" class="btn btn-primary" value="Add Order" name="addOrder">
    </form>
</section>