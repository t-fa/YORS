<title>Ye Olde Robot Shoppe Purchases</title>

<!-- Mock SQL query and CRUD functions for the orders Entity-->
<h1>Current Purchases:</h1>
<section>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Purchase ID</th>
                <th>Purchase Date</th>
                <th>Customer ID</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{ this.purchaseID }}</td>
                <td>{{ this.purchaseDate }}</td>
                <td>{{ this.customerID }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>

<br>

<h1>Add a new purchase:</h1>
<section>
    <form method="post">
        <div class="form-group">
            <label for="customerID">Enter customerID:
                <select class="custom-select" name="customerID">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </label>
            <label>Enter Date of Purchase:
                <input class="form-control" type="date" name="purchaseDate" size="40" />
            </label>
            <input type="submit" class="btn btn-primary" value="Add Purchase" name="addPurchase" />
        </div>
    </form>
</section>